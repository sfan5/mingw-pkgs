#!/bin/bash -eu

. ./common.sh
common_init "$@"

pkgver=8.0.1
fetch_web "https://curl.se/download/curl-$pkgver.tar.bz2" \
	9b6b1e96b748d04b968786b6bdf407aa5c75ab53a3d37c1c8c81cdb736555ccf
unpack_tar "curl-$pkgver.tar.bz2" --strip-components=1

CC=$MINGW_CC ./configure --host=$MINGW_PREFIX --prefix=/ \
	--enable-ipv6 --with-schannel --disable-ldap \
	--with-zlib=$(depend_get_path zlib)
make

make DESTDIR=$INSTALL_DIR install
rm -f $INSTALL_DIR/bin/curl-config
common_tidy

package $pkgver
