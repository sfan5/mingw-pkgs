#!/bin/bash -eu

. ./common.sh
common_init "$@"

pkgver=7.81.0
fetch_web "https://curl.haxx.se/download/curl-$pkgver.tar.bz2" \
	1e7a38d7018ec060f1f16df839854f0889e94e122c4cfa5d3a37c2dc56f1e258
unpack_tar "curl-$pkgver.tar.bz2" --strip-components=1

CC=$MINGW_CC ./configure --host=$MINGW_PREFIX --prefix=/ \
	--enable-ipv6 --with-schannel --disable-ldap \
	--with-zlib=$(depend_get_path zlib)
make

make DESTDIR=$INSTALL_DIR install
rm -f $INSTALL_DIR/bin/curl-config
common_tidy

package $pkgver
