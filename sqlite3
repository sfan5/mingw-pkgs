#!/bin/bash -eu

. ./common.sh
common_init "$@"

pkgver=3.35.5
pkgver_year=2021
pkgver_num=3350500
fetch_web "https://www.sqlite.org/$pkgver_year/sqlite-autoconf-$pkgver_num.tar.gz" \
	f52b72a5c319c3e516ed7a92e123139a6e87af08a2dc43d7757724f6132e6db0
unpack_tar "sqlite-autoconf-$pkgver_num.tar.gz" --strip-components=1

CC=$MINGW_CC ./configure --host=$MINGW_PREFIX --prefix=/ \
	--disable-static-shell --disable-{fts{3,4,5},json1,rtree}
make

make DESTDIR=$INSTALL_DIR install
common_tidy

package $pkgver
