#!/bin/bash -eu

. ./common.sh
common_init "$@"

pkgver=3.44.2
pkgver_year=2023
pkgver_num=3440200
fetch_web "https://www.sqlite.org/$pkgver_year/sqlite-autoconf-$pkgver_num.tar.gz" \
	1c6719a148bc41cf0f2bbbe3926d7ce3f5ca09d878f1246fcc20767b175bb407
unpack_tar "sqlite-autoconf-$pkgver_num.tar.gz" --strip-components=1

CC=$MINGW_CC ./configure --host=$MINGW_PREFIX --prefix=/ \
	--disable-static-shell --disable-{fts{3,4,5},rtree}
make

make DESTDIR=$INSTALL_DIR install
common_tidy

package $pkgver
